#include <iostream>      // THE ARRAY MUST BE SORTED TO APPLY BINARY SEARCH
using namespace std;

int binary_Search(int arr[],int size,int key){
    int start = 0;
    int end = size - 1;
    int mid = end - (end - start)/2;      // we shouldn't write (start +end)/2 , becuase if both integers are INT_MAX it cannot store
    while(start<=end){
        if(arr[mid]==key){
            return mid;
        }
        else if(arr[mid]>key){
            end = mid - 1;
        }
        else{
            start = mid + 1;
        }
        mid = end - (end - start)/2;
    }
    return -1;   // if the element we want to search (key) is not there in an array, then return -1                             
}
int main()
{
    int odd[7]={3,5,9,13,27,82,91};
    cout<<binary_Search(odd,7,82);   //  no need to write it as odd[ ] ,when calling the array in the function

    return 0;
}
